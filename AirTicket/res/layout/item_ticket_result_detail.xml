<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:padding="15dp" >

    <!-- 舱位类型 -->

    <TextView
        android:id="@+id/tv_ticket_result_details_space"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="经济舱"
        android:textColor="@color/ticket_black"
        android:textSize="16sp" />
    <!-- 折扣 -->

    <TextView
        android:id="@+id/tv_ticket_result_details_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="8折"
        android:textColor="@color/ticket_black"
        android:textSize="16sp" />
    <!-- 价格 -->

    <TextView
        android:id="@+id/tv_ticket_result_details_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:text="￥1310"
        android:textColor="@color/ticket_title_color"
        android:textSize="16sp" />
    <!-- 预订 -->

    <Button
        android:id="@+id/btn_ticket_result_details_book"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@drawable/ticket_btn_corner_selector"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:text="预订"
        android:textColor="@color/ticket_white"
        android:textSize="15sp" />

</LinearLayout>